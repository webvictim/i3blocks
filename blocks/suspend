#!/bin/bash
ICON="ï††" # moon (sleep)

# left click (hybrid sleep)
if [[ "${BLOCK_BUTTON}" -eq 1 ]]; then
    systemctl hybrid-sleep
# middle click (hibernate)
elif [[ "${BLOCK_BUTTON}" -eq 2 ]]; then
    systemctl hibernate
# right click (sleep only)
elif [[ "${BLOCK_BUTTON}" -eq 3 ]]; then
    systemctl suspend
fi

echo "${ICON}"
echo "${ICON}"
echo ""
