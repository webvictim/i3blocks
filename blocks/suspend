#!/bin/bash
ICON="ï††" # moon (sleep)

# left click (suspend then hibernate)
if [[ "${BLOCK_BUTTON}" -eq 1 ]]; then
    systemctl suspend-then-hibernate
# middle click (hibernate)
elif [[ "${BLOCK_BUTTON}" -eq 2 ]]; then
    systemctl hibernate
# right click (hybrid sleep)
elif [[ "${BLOCK_BUTTON}" -eq 3 ]]; then
    systemctl suspend
fi

echo "${ICON}"
echo "${ICON}"
echo ""
